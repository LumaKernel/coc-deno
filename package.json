{
  "name": "coc-deno",
  "version": "0.0.1",
  "description": "Deno extension for coc.nvim",
  "author": "Heyward Fann <fannheyward@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fannheyward/coc-deno.git"
  },
  "keywords": [
    "coc.nvim",
    "deno"
  ],
  "engines": {
    "coc": "^0.0.70"
  },
  "scripts": {
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "build": "webpack",
    "prepare": "npm-run-all clean build"
  },
  "dependencies": {
    "typescript-deno-plugin": "^1.2.7"
  },
  "devDependencies": {
    "@types/node": "^12.11.5",
    "coc.nvim": "^0.0.74",
    "ts-loader": "^6.2.0",
    "typescript": "^3.7.2"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "workspaceContains:**/.denorc",
    "workspaceContains:**/.denoignore"
  ],
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-deno-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "configuration": {
      "type": "object",
      "title": "coc-deno configuration",
      "properties": {
        "deno.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Deno"
        },
        "deno.packageManager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ],
          "default": "npm",
          "description": "The package manager you use to install node modules."
        },
        "deno.alwaysShowStatus": {
          "type": "boolean",
          "default": true,
          "description": "Always show the Deno status bar item."
        },
        "deno.autoFmtOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Turns auto format on save on or off."
        },
        "deno.dtsPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The Path of TypeScript declaration file(.d.ts)"
        }
      }
    }
  }
}
